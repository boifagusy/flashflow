# Getting Started Example
# This is a simple example to help you get started with FlashFlow

# Define a simple model
model:
  name: "Product"
  fields:
    - name: "name"
      type: "string"
      required: true
    - name: "price"
      type: "decimal"
      required: true
    - name: "description"
      type: "text"
    - name: "in_stock"
      type: "boolean"
      default: true

# Create a simple page
page:
  title: "Product Catalog"
  path: "/"
  body:
    - component: "header"
      content: "Welcome to Our Product Catalog"
    
    - component: "text"
      content: "Browse our collection of amazing products"
    
    # Button that makes an API call
    - component: "button"
      text: "Load Products"
      action: "api_call"
      method: "GET"
      endpoint: "/api/products"
    
    # Form to add new products
    - component: "form"
      action: "create_product"
      fields:
        - name: "name"
          type: "text"
          placeholder: "Product name"
          required: true
        - name: "price"
          type: "number"
          placeholder: "Price"
          required: true
        - name: "description"
          type: "textarea"
          placeholder: "Description"
      button_text: "Add Product"

# Define API endpoints
endpoint:
  path: "/api/products"
  method: "GET"
  handler:
    action: "list_records"
    model: "Product"

endpoint:
  path: "/api/products"
  method: "POST"
  handler:
    action: "create_record"
    model: "Product"
    values:
      name: "{{ request.body.name }}"
      price: "{{ request.body.price }}"
      description: "{{ request.body.description }}"

# Simple about page
page:
  title: "About Us"
  path: "/about"
  body:
    - component: "header"
      content: "About Our Company"
    
    - component: "text"
      content: "We are a company dedicated to providing the best products to our customers."
    
    - component: "button"
      text: "Back to Home"
      action: "navigate"
      params:
        path: "/"