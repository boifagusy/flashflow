# Sample FlashFlow Definition File

page Home:
  title: "Welcome to FlashFlow"
  path: "/"
  
  body:
    - header:
        content: "FlashFlow Application"
      
    - text:
        content: "This is a sample FlashFlow application demonstrating the project structure."
      
    - list Post:
        title: "Recent Posts"
        filter: published = true
        sort: created_at desc
        limit: 10
        
        card:
          header: title
          content: substr(content, 0, 100) + "..."
          footer: "Published on " + format_date(created_at)
      
    - button:
        text: "Create Post"
        action: navigate_to
        link: "/posts/create"

page CreatePost:
  title: "Create New Post"
  path: "/posts/create"
  
  body:
    - form Post:
        inputs:
          - input:
              name: title
              label: "Title"
              required: true
          
          - textarea:
              name: content
              label: "Content"
              rows: 10
          
          - checkbox:
              name: published
              label: "Publish immediately"
          
          - submit_button:
              text: "Save Post"