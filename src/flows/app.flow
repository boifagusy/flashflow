# Sample FlashFlow Definition File

model User {
  id: integer primary_key auto_increment
  name: string required
  email: string required unique
  created_at: timestamp auto
  updated_at: timestamp auto
}

model Post {
  id: integer primary_key auto_increment
  title: string required
  content: text
  author: reference User
  published: boolean default:false
  created_at: timestamp auto
  updated_at: timestamp auto
}

page Home {
  title: "Welcome to FlashFlow"
  path: "/"
  
  header {
    content: "FlashFlow Application"
  }
  
  text {
    content: "This is a sample FlashFlow application demonstrating the project structure."
  }
  
  list Post {
    title: "Recent Posts"
    filter: published = true
    sort: created_at desc
    limit: 10
    
    card {
      header: title
      content: substr(content, 0, 100) + "..."
      footer: "Published on " + format_date(created_at)
    }
  }
  
  button "Create Post" {
    action: navigate_to CreatePost
  }
}

page CreatePost {
  title: "Create New Post"
  path: "/posts/create"
  
  form Post {
    input title {
      label: "Title"
      required: true
    }
    
    textarea content {
      label: "Content"
      rows: 10
    }
    
    checkbox published {
      label: "Publish immediately"
    }
    
    submit_button "Save Post"
  }
}